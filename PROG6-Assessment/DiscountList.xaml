<Window x:Class="PROG6_Assessment.DiscountList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kortingen" Height="300" Width="450">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="Appie Kortingen" FontSize="28" TextAlignment="Center"/>
        <DataGrid DockPanel.Dock="Top" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="*" Width="10" />
                <DataGridTextColumn Header="%" Width="10" />
                <DataGridTextColumn Header="Code" Width="*" />
                <DataGridTextColumn Header="Geldig van" Width="*" />
                <DataGridTextColumn Header="Geldig tot" Width="*" />
                <DataGridTextColumn Header="Nu" Width="30" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel DockPanel.Dock="Bottom">
            <Button>Korting Bewerken</Button>
            <Button>Korting Toevoegen</Button>
        </StackPanel>
    </DockPanel>
</Window>
