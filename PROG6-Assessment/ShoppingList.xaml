<Window x:Class="PROG6_Assessment.ShoppingList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Boodschappenlijstje" Height="500" Width="500"
        DataContext="{Binding Source={StaticResource Locator}, Path=Appie}">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="Appie Winkelwagen" FontSize="28" TextAlignment="Center"/>
        <DataGrid DockPanel.Dock="Top" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Merk" Width="300" />
                <DataGridTextColumn Header="Aantal" Width="50" />
                <DataGridTextColumn Header="Prijs" Width="*" />
                <DataGridTextColumn Header="Korting" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel DockPanel.Dock="Bottom">
            <Button>Meer van dit product</Button>
            <Button>Minder van dit product</Button>
            <Button Margin="0,20,0,0" Background="Red" Foreground="White" >Winkelwagen legen</Button>
            <Button>Winkelwagen opslaan als recept</Button>
        </StackPanel>
        <TextBlock DockPanel.Dock="Bottom" Text="Totaalprijs: " FontSize="14" Padding="5,0,0,0"/>
    </DockPanel>
</Window>
