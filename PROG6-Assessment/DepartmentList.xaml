<Window x:Class="PROG6_Assessment.DepartmentList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Afdelingen" Height="300" Width="300">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="Appie Afdelingen" FontSize="28" TextAlignment="Center"/>
        <DataGrid DockPanel.Dock="Top" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Width="20" />
                <DataGridTextColumn Header="Afdelingnaam" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel DockPanel.Dock="Bottom">
            <Button>Afdeling Bewerken</Button>
            <Button>Afdeling Toevoegen</Button>
        </StackPanel>
    </DockPanel>
</Window>
