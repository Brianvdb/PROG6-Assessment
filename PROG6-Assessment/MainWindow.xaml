<Window x:Class="PROG6_Assessment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Appie" Height="350" Width="200"
        DataContext="{Binding Source={StaticResource Locator}, Path=Appie}">
    <StackPanel>
        <Button Command="{Binding OpenShoppingList}" Width="150" Margin="0,5,5,0">Boodschappenlijstje</Button>
        <Button Command="{Binding OpenBrandList}" Width="150" Margin="0,5,5,0">Merken</Button>
        <Button Command="{Binding OpenProductList}" Width="150" Margin="0,5,5,0">Producten</Button>
        <Button Command="{Binding OpenDepartmentList}" Width="150" Margin="0,5,5,0">Afdelingen</Button>
        <Button Command="{Binding OpenRecipeList}" Width="150" Margin="0,5,5,0">Recepten</Button>
        <Button Command="{Binding OpenDiscountList}" Width="150" Margin="0,5,5,0">Kortingen</Button>
    </StackPanel>
</Window>
