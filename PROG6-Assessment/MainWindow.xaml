<Window x:Class="PROG6_Assessment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Appie" Height="350" Width="200"
        DataContext="{Binding Source={StaticResource Locator}, Path=Appie}">
    <StackPanel>
        <Button Command="{Binding OpenShoppingList}">Boodschappenlijstje</Button>
        <Button Command="{Binding OpenBrandList}">Merken</Button>
        <Button Command="{Binding OpenProductList}">Producten</Button>
        <Button Command="{Binding OpenProductTypeList}">Product Types</Button>
        <Button Command="{Binding OpenDepartmentList}">Afdelingen</Button>
        <Button Command="{Binding OpenRecipeList}">Recepten</Button>
        <Button Command="{Binding OpenDiscountList}">Kortingen</Button>
    </StackPanel>
</Window>
