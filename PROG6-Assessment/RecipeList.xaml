<Window x:Class="PROG6_Assessment.RecipeList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Receptenlijst" Height="300" Width="300">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="Appie Receptenlijst" FontSize="28" TextAlignment="Center"/>
        <DataGrid DockPanel.Dock="Top" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Recept" Width="300" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel DockPanel.Dock="Bottom">
            <Button>Toevoegen aan Winkelwagen</Button>
            <Button>Recept Verwijderen</Button>
        </StackPanel>
    </DockPanel>
</Window>
